<mvc:View controllerName="Zweatherapp.weatherapp.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table 
                items="{path: 'weatherModel>/hourly'}">
                <columns>
                    <Column>
                        <Text text="First" />
                    </Column>
                    <Column>
                        <Text text="Second" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{weatherModel>/hourly/time}" />
                            <Text text="{weatherModel>/hourly/time}" />
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>
        </content>
    </Page>
</mvc:View>
